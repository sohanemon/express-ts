{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "A minimally opinionated typescript & express starter",
  "author": "SohanEmon <sohanemon@outlook.com>",
  "license": "MIT-0",
  "private": false,
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc && node dist/src/server.js",
    "lint": "npx eslint src",
    "format": "prettier --check \"{*.js,!(node*)**/*.ts}\"",
    "format:write": "prettier --write \"{*.js,!(node*)**/*.ts}\""
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.48.0",
    "nodemon": "^3.0.2",
    "prettier": "3.1.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
